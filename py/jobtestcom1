apiVersion: batch/v1

kind: Job

metadata:

  name: testcom1

spec:

  template:

    spec:

      containers:

      - name: testcom1

        image: com1:sutee
        volumeMounts:
            - name: myvolume
              mountPath: /www

        command: ["perl""]

      restartPolicy: Never
      volumes:
      - name: myvolume
        persistentVolumeClaim: 
          claimName: mypvc

  backoffLimit: 4



